<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <ImageView
                android:id="@+id/ironMan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/tony_stark_new" />
            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tont Stark"
                android:textSize="18sp"
                android:layout_toRightOf="@id/ironMan"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/ironMan"
                android:layout_below="@id/textName"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 111111111111"
                android:textSize="18sp"
                android:layout_toRightOf="@id/ironMan"
                android:layout_below="@id/textEmail"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/CA"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/captain_america" />
            <TextView
                android:id="@+id/textNameca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Roger"
                android:textSize="18sp"
                android:layout_toRightOf="@id/CA"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/textEmailCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steve@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/CA"
                android:layout_below="@id/textNameca"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textPhoneCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 1231321325"
                android:textSize="18sp"
                android:layout_toRightOf="@id/CA"
                android:layout_below="@id/textEmailCa"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <ImageView
                android:id="@+id/Hulk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/hulk" />
            <TextView
                android:id="@+id/textNameH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Bruce Banner"
                android:textSize="18sp"
                android:layout_toRightOf="@id/Hulk"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/textEmailH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bruce@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/Hulk"
                android:layout_below="@id/textNameH"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textPhoneH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 56546215655"
                android:textSize="18sp"
                android:layout_toRightOf="@id/Hulk"
                android:layout_below="@id/textEmailH"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <ImageView
                android:id="@+id/thor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/thor" />
            <TextView
                android:id="@+id/textNameT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor The God Of Thuder"
                android:textSize="18sp"
                android:layout_toRightOf="@id/thor"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/textEmailT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yhor@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/thor"
                android:layout_below="@id/textNameT"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textPhoneS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 79746546586"
                android:textSize="18sp"
                android:layout_toRightOf="@id/thor"
                android:layout_below="@id/textEmailT"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <ImageView
                android:id="@+id/Bp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/black_panther" />
            <TextView
                android:id="@+id/textNameBp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Panther"
                android:textSize="18sp"
                android:layout_toRightOf="@id/Bp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/textEmailBp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tchall@wakanda.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/Bp"
                android:layout_below="@id/textNameBp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textPhoneBp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+87+ 54654216554"
                android:textSize="18sp"
                android:layout_toRightOf="@id/Bp"
                android:layout_below="@id/textEmailBp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <ImageView
                android:id="@+id/wid"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/widow" />
            <TextView
                android:id="@+id/textNameW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Widow"
                android:textSize="18sp"
                android:layout_toRightOf="@id/wid"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/textEmailW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="widow@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@id/wid"
                android:layout_below="@id/textNameW"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/textPhoneW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 45464655412"
                android:textSize="18sp"
                android:layout_toRightOf="@id/wid"
                android:layout_below="@id/textEmailW"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>